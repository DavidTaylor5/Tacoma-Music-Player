<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

<!--            <Button-->
<!--                android:id="@+id/music_player_button"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:background="@drawable/sharp_keyboard_double_arrow_down_24"-->
<!--                android:backgroundTint="@color/light_green"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                />-->

            <LinearLayout
                android:id="@+id/player_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_container"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sharp_keyboard_double_arrow_down_24"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/library_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text="Player"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sharp_keyboard_double_arrow_down_24"
                    android:layout_weight="1"
                    />

            </LinearLayout>

<!--            <Button-->
<!--                android:id="@+id/music_player_button"-->
<!--                android:text="Player"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->

<!--                />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/button_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/sorting_button"
                    android:src="@drawable/baseline_settings_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/search_button"
                    android:src="@drawable/baseline_search_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/cancel_search_button"
                    android:src="@drawable/baseline_search_off_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- activity_screen_slide.xml -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.andaagii.tacomamusicplayer.view.CustomNavigationControl
            android:id="@+id/navigation_control"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:queueImg="@drawable/queue_icon"
            app:playerImg="@drawable/play_circle_outline"
            app:playlistImg="@drawable/playlist_icon"
            app:albumBrowseImg="@drawable/browse_album_icon"
            app:albumImg="@drawable/album_icon"
            android:layout_weight="0"
            />
    </LinearLayout>

    <com.andaagii.tacomamusicplayer.view.CustomSortingPrompt
        android:id="@+id/sorting_prompt"
        android:layout_width="300dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>