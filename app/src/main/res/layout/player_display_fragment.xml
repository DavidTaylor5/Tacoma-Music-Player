<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical"
        >
<!--        android:paddingTop="30dp"-->

        <View
            android:id="@+id/status_bar_inset"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <!-- activity_screen_slide.xml -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mini_player_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/mini_player_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chopper_default"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/mini_player_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/song_title_song_artist"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

                <View
                    android:id="@+id/mini_player_prev_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_double_arrow_left_24"
                    android:backgroundTint="@color/white"
                    />

                <View
                    android:id="@+id/mini_player_play_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_play_arrow"
                    />

                <View
                    android:id="@+id/mini_player_next_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_double_arrow_right_24"
                    android:backgroundTint="@color/white"
                    />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.andaagii.tacomamusicplayer.view.CustomNavigationControl
            android:id="@+id/navigation_control"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:queueImg="@drawable/queue_icon"
            app:playerImg="@drawable/play_circle_outline"
            app:playlistImg="@drawable/playlist_icon"
            app:albumBrowseImg="@drawable/browse_album_icon"
            app:albumImg="@drawable/album_icon"
            android:layout_weight="0"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>