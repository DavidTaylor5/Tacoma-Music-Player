<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/page_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Action Button"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_button"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/layout_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_grid_view_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_container"
                android:layout_marginEnd="10dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/button_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/sorting_button"
                    android:src="@drawable/baseline_settings_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/search_button"
                    android:src="@drawable/baseline_search_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/cancel_search_button"
                    android:src="@drawable/baseline_search_off_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- activity_screen_slide.xml -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mini_player_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/mini_player_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chopper_default"
                    />

                <TextView
                    android:id="@+id/mini_player_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Song Title - Song Artist"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />

                <View
                    android:id="@+id/mini_player_prev_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_double_arrow_left_24"
                    android:backgroundTint="@color/white"
                    />

                <View
                    android:id="@+id/mini_player_play_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_play_arrow"
                    />

                <View
                    android:id="@+id/mini_player_next_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_double_arrow_right_24"
                    android:backgroundTint="@color/white"
                    />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.andaagii.tacomamusicplayer.view.CustomNavigationControl
            android:id="@+id/navigation_control"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:queueImg="@drawable/queue_icon"
            app:playerImg="@drawable/play_circle_outline"
            app:playlistImg="@drawable/playlist_icon"
            app:albumBrowseImg="@drawable/browse_album_icon"
            app:albumImg="@drawable/album_icon"
            android:layout_weight="0"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>