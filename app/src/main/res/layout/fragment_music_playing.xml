<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Layout for when no songs are available -->
    <ImageView
        android:id="@+id/chopper_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chopper_default"/>

    <!-- Active Player Layout -->
    <LinearLayout
        android:id="@+id/active_player_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            >

            <ImageView android:id="@+id/song_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/chopper_default"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <Button
                android:id="@+id/loop_toggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/loop_icon"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/prev_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:id="@+id/song_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/song_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/album_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="10dp"
                    />

                <TextView
                    android:id="@+id/artist_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/shuffle_toggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/right_arrow"
                app:backgroundTint="@null"
                app:layout_constraintStart_toEndOf="@id/next_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                />

        </LinearLayout>


        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:show_timeout="0"
            app:controller_layout_id="@layout/custom_exo_controller_update"
            app:player_layout_id="@layout/custom_exo_player_update"
            app:hide_on_touch="false"
            app:use_controller="true"
            app:auto_show="false"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_control_buttons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <Button
                android:id="@+id/seek_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_replay_15"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/prev_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/prev_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_keyboard_double_arrow_left_24"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/play_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/play_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/baseline_play_arrow_24"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/next_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_keyboard_double_arrow_right_24"
                android:backgroundTint="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="@id/play_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <Button
                android:id="@+id/seek_forward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_forward_15"
                app:backgroundTint="@null"
                app:layout_constraintStart_toEndOf="@id/next_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>