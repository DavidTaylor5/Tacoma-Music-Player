<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/albumlist_button_focused"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:translationZ="2dp"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/queue_button"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:text="Currently Playing"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- If I get Time I will add settings menu to the actual playing music page -->
        <ImageView
            android:id="@+id/settings_wheel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_settings_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <ImageView android:id="@+id/alternate_song_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:src="@drawable/chopper_default"
            android:backgroundTint="#8BC34A"/>

        <ImageView android:id="@+id/song_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:src="@drawable/chopper_default"
            android:backgroundTint="#8BC34A" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/repeat_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/loop_icon"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/prev_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:id="@+id/song_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/song_title_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20dp"
                android:background="#F44336"
                />

            <TextView
                android:id="@+id/album_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textSize="10dp"
                android:background="#9C27B0"
                />

            <TextView
                android:id="@+id/artist_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="10dp"
                android:background="#E91E63"
                />
        </LinearLayout>

        <Button
            android:id="@+id/shuffle_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right_arrow"
            app:backgroundTint="@null"
            app:layout_constraintStart_toEndOf="@id/next_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            />

    </LinearLayout>


    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_timeout="0"
        app:controller_layout_id="@layout/custom_exo_controller_update"
        app:player_layout_id="@layout/custom_exo_player_update"
        android:background="@color/songlist_button_focused"
        app:hide_on_touch="false"
        app:use_controller="true"
        app:auto_show="false" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_control_buttons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <Button
            android:id="@+id/seek_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_replay_15"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/prev_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/prev_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_keyboard_double_arrow_left_24"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/play_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/play_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/baseline_play_arrow_24"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/next_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_keyboard_double_arrow_right_24"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="@id/play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/seek_forward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_forward_15"
            app:backgroundTint="@null"
            app:layout_constraintStart_toEndOf="@id/next_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:id="@+id/library_section"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#CDDC39"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/up_arrows"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/library_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="Library"
            android:textAlignment="gravity"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/up_arrows"
            android:layout_weight="1"
            />

    </LinearLayout>
</LinearLayout>