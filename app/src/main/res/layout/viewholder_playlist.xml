<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:id="@+id/item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/playlist_art"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wu_tang_placeholder"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DEFAULT Text"
            android:textColor="@color/text_icons"
            android:layout_weight="2"
            android:background="#9C27B0"
            android:textAlignment="center"
            />

        <LinearLayout
            android:id="@+id/duration_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/albumlist_button_focused"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/duration_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/duration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                />

        </LinearLayout>

        <View
            android:id="@+id/play_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/white_play_arrow"
            android:layout_gravity="center"
            />

        <View
            android:id="@+id/menu_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/menu_icon"
            android:layout_gravity="center"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

